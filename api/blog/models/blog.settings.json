{
  "connection": "default",
  "collectionName": "blogs",
  "info": {
    "name": "Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "published": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "shortDescription": {
      "type": "text"
    },
    "tags": {
      "collection": "tag",
      "via": "blogs",
      "dominant": true
    }
  }
}
