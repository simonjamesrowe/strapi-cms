{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "profiles",
  "info": {
    "name": "Profile"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "backgroundImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "headline": {
      "type": "string"
    },
    "profileImage": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "cv": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
